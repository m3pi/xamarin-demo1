<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:diplomado" x:Class="diplomado.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0, 20, 0, 0" />
        </OnPlatform>
    </ContentPage.Padding>

    <Label HorizontalOptions="Center"
           VerticalOptions="Center"
           x:Name="deviceLabel">
        <Label.Text>
            <OnPlatform x:TypeArguments="x:String">
                <On Platform="iOS" Value="This is an iOS device"></On>
                <On Platform="Android" Value="This is an Android device"></On>
                <On Platform="UWP" Value="This is a Windows device"></On>
            </OnPlatform>
        </Label.Text>
    </Label>
    
</ContentPage>